

<!-- Display errors on page: -->
<div class="container">
	<div class="row">

	<% if @user %>
		<%= render partial: "shared/form_error_list", locals: { model: @user } %>
	<% end %>
	

	<div class="col-md-4">
		<h2>Registration</h2>
			<%= form_for User.new do |f| %>
		
		<p>
			<%= f.label :username %>
			<%= f.text_field :username %>
		</p>
		<p>
			<%= f.label :password %>
			<%= f.password_field :password %>
		</p>
		<p>
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation %>
		</p>
		<p>
			<%= f.label :email %>
			<%= f.text_field :email %>
		</p>
		<p>
			<%= f.label :license_plate_state %>
			<%= f.text_field :license_plate_state %>
		</p>
		<p>
			<%= f.label :license_plate_number %>
			<%= f.text_field :license_plate_number %>
		</p>
		<p>
			<%= f.label :vehicle_image %>
			<%= f.file_field :vehicle_image %>
		</p>	
		<p>
			<%= f.submit %>
		</p>

	<% end %>

	</div>
</div>






<h2>Login</h2>

<%= form_tag sessions_path do %>

    <p>
        <%= label_tag :username %>
        <%= text_field_tag :username %>
    </p>
    <p>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
    </p>
    <p>
        <%= submit_tag "Login" %>
    </p>

<% end %>

</div>
